<html>
	<head>
		<title>Hangman</title>
		<link href="styles.css" rel="stylesheet" type="text/css">
		<link href="https://fonts.googleapis.com/css?family=Raleway:300" rel="stylesheet">
	</head>
		<body>
			<h1>Mr. Chi's Hangman!</h1>
			<div id = "display">
				<%= display %>
			</div>
			<div>
				<img src="images/hangman_<%=counter%>.png" alt="hangman">
			</div>
			<form>
				<div id = "wrapper">
					<label>Guess a letter!</label>
					<input type='text' name='guess' id = 'guess'/>
					<label>Guess the word!</label>
					<input type='text' name='word_guess' id ='word_guess'/>

					<div>
						<input type='submit' value='submit'/>
					</div>
				</div>
			</form>

			<div class = 'message'>
				<%= message %>
			</div>

			<div class = 'message'>
				<%= word_guess_message %>
			</div>

			<div id = 'history'>
				<div>
					Guesses
				</div>

				<div id = 'choices'>
					<%= choices.join(" ")%>
				</div>
			</div>	
			<div id = 'new_game'>
				<a href='/reset'>New Game</a>
			</div>	
			<div>
				<%= correct_counter %>
			</div>
		</body>
</html>